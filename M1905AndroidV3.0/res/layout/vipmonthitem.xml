<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="6dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="6dp" >

    <RadioButton
        android:id="@+id/rbnVipMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:button="@drawable/rad_vip_selector"
        android:paddingLeft="@dimen/rad_padding"
        android:textColor="#646464"
        android:textSize="@dimen/vip_item_textSize" />

    <TextView
        android:id="@+id/tvwVipMonthDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rbnVipMonth"
        android:singleLine="true"
        android:text="@string/default_price"
        android:textColor="#646464"
        android:visibility="gone"
        android:textSize="@dimen/vip_item_textSize" />

    <TextView
        android:id="@+id/tvwVipMonthUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/tvwVipMonthUnit"
        android:textColor="#0090cd"
        android:textSize="@dimen/vip_item_textSize" />

    <TextView
        android:id="@+id/tvwVipMonthPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tvwVipMonthUnit"
        android:text="@string/default_price"
        android:textColor="#0090cd"
        android:textSize="@dimen/vip_item_textSize" />

</RelativeLayout>