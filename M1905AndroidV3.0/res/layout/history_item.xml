<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="@dimen/item_minHeight"
              android:descendantFocusability="blocksDescendants"
              android:padding="10dp">

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

        <CheckBox
                android:id="@+id/chkItem"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:clickable="false"
                android:focusable="false"
                android:background="@drawable/list_chkitem_selector"
                android:button="@null"
                />

    </RelativeLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_marginLeft="15dp"
                  android:layout_weight="1"
                  android:gravity="center_vertical">

        <TextView
                android:id="@+id/tvwTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:singleLine="true"
                android:layout_marginRight="20dp"
                android:text="澳门风云，谢霆锋拜师压力大得很啊啊啊啊啊啊啊啊啊啊"/>

        <TextView
                android:id="@+id/tvwSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:text="已看完"/>

    </LinearLayout>

    <ImageButton
            android:id="@+id/imgBtnPlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/history_btn_play_selector"
            />

</LinearLayout>