<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/ivwVideoImg"
        android:layout_width="@dimen/rlt_ivwVideoImg_layout_width"
        android:layout_height="@dimen/rlt_ivwVideoImg_layout_height"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:background="@drawable/default_video_img_loading"
        android:src="@drawable/video_item_selector" />

    <ImageView
        android:id="@+id/ivwVIPLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ivwVideoImg"
        android:background="@drawable/vip_logo"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvwVideoName"
        android:layout_width="@dimen/rlt_ivwVideoImg_layout_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivwVideoImg"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="left"
        android:paddingBottom="2dp"
        android:paddingLeft="@dimen/rlt_tvwVideoName_paddingLeft"
        android:paddingRight="@dimen/rlt_tvwVideoName_paddingRight"
        android:paddingTop="@dimen/rlt_tvwVideoName_paddingTop"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/title_cn" />
	<TextView
        android:id="@+id/tvwVideoXJ"
        android:layout_width="@dimen/rlt_ivwVideoImg_layout_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvwVideoName"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="left"
        android:paddingBottom="@dimen/rlt_tvwVideoName_paddingBottom"
        android:paddingLeft="@dimen/rlt_tvwVideoName_paddingLeft"
        android:paddingRight="@dimen/rlt_tvwVideoName_paddingRight"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textSize="13dp"
        android:textColor="@color/wd_item_color" />
</RelativeLayout>