<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg_two" >

    <RelativeLayout
        android:layout_width="330dip"
        android:layout_height="430dip"
        android:layout_centerInParent="true"
        android:background="@drawable/win_bg" >

        <TextView
            android:id="@+id/tv_win_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:text="更新提示"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_win_login"
            android:layout_marginRight="10dip"
            android:background="@drawable/win_close" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_win_login"
            android:layout_marginTop="10dip"
            android:background="@color/btn_navi_line"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tv_updata_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="10dip"
            android:text="更新内容" />

        <ImageView
            android:id="@+id/iv_updata_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_updata_content"
            android:layout_centerHorizontal="true" 
            android:src="@drawable/logo"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_updata_image"
            android:layout_marginTop="10dip" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content" 
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="80dip"
                    android:layout_height="40dp"
                    android:background="@drawable/my_btn"
                    android:text="确认"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >
                <Button
                    android:id="@+id/btn_no"
                    android:layout_width="80dip"
                    android:layout_height="40dp"
                    android:background="@drawable/my_btn"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>