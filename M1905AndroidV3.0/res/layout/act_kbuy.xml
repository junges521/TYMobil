<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/ileNavi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/top_navi" />

    <com.m1905.mobile.ui.VerificationPassEditText
        android:id="@+id/ka_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ileNavi"
                android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true" />

    <com.m1905.mobile.ui.VerificationPassEditText
        android:id="@+id/ka_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/ka_user"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/button_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ka_password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/register_btn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_btn"
            android:text="激活"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>